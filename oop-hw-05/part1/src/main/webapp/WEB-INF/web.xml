<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app
        xmlns="java.sun.com/xml/ns/javaee"
        xmlns:xsi="w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="java.sun.com/xml/ns/javaee java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
        version="3.0">
  <display-name>OOP hw05</display-name>

  <servlet>
    <servlet-name>login-controller</servlet-name>
    <servlet-class>controller.LoginController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>login-controller</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>account-creation-controller</servlet-name>
    <servlet-class>controller.AccountCreationController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>account-creation-controller</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>

</web-app>
